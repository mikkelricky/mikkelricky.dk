{
    "name": "mikkelricky/mikkelricky.dk",
    "license": "proprietary",
    "type": "project",
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/asset": "~7.2.0",
        "symfony/asset-mapper": "~7.2.0",
        "symfony/console": "~7.2.1",
        "symfony/dotenv": "~7.2.0",
        "symfony/flex": "^2.4.7",
        "symfony/framework-bundle": "~7.2.1",
        "symfony/runtime": "~7.2.0",
        "symfony/twig-bundle": "~7.2.0",
        "symfony/yaml": "~7.2.0",
        "twig/extra-bundle": "^2.12 || ^3.18",
        "twig/twig": "^2.12 || ^3.18"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.45",
        "friendsofphp/php-cs-fixer": "^3.65",
        "kocal/biome-js-bundle": "^1.3",
        "phpstan/phpstan": "^2.0.4",
        "symfony/debug-bundle": "~7.2.0",
        "symfony/maker-bundle": "^1.61",
        "symfony/stopwatch": "~7.2.0",
        "symfony/var-dumper": "~7.2.0",
        "symfony/web-profiler-bundle": "~7.2.0",
        "vimeo/psalm": "dev-master",
        "vincentlanglet/twig-cs-fixer": "^3.5"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.2.*"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "code-analysis": [
            "phpstan",
            "psalm"
        ],
        "coding-standards-apply": [
            "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix",
            "twig-cs-fixer lint templates --fix"
        ],
        "coding-standards-check": [
            "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --dry-run",
            "twig-cs-fixer lint templates"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse src"
        ],
        "psalm": [
            "./vendor/bin/psalm --no-cache"
        ]
    }
}
