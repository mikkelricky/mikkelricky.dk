<!doctype html>
<html lang="da" data-bs-theme="dark">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% set site_title = 'mikkelricky.dk' %}
    {% set page_title -%}
        {%- block page_title -%}{%- endblock -%}
    {%- endset %}
    <title>{{ site_title }}{{ page_title ? ' â€“ ' ~ page_title }}</title>
    {% block stylesheet %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
     .navbar {
     {# pull .navbar outsite .container-fluid #}
         margin-left: calc(var(--bs-gutter-x) * -.5);
         margin-right: calc(var(--bs-gutter-x) * -.5);
     }
    </style>
    {% endblock %}
</head>
<body id="{{ id }}">
{% block body %}
<div class="container-fluid">
    {% block navigation %}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_default') }}">{{ site_title }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% for page in menu_pages %}
                    <li class="nav-item">
                        {% if path == page.path %}
                            <a class="nav-link active" aria-current="page" href="{{ page.path }}">{{ page.title }}</a>
                        {% else %}
                            <a class="nav-link" href="{{ page.path }}">{{ page.title }}</a>
                        {% endif %}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </nav>
    {% endblock %}

    <h1>{{ page_title }}</h1>

    {% block content %}
    {% endblock %}
</div>
{% endblock %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
